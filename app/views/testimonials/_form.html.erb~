<%= simple_form_for(@testimonial) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
   <%= f.input :name, :required => true %>
    <%= f.input :address, :required => true %>
   
    
    <%= f.input :testimonial_body, :as => :text, :required => true %>
    
    

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
