                        <%= button_to "Learn More",   services_path, :method => :get %>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-fw fa-compass"></i>Roof Maintenance</h4>
                    </div>
                    <div class="panel-body">
